{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DelegationReport",
  "type": "object",
  "required": ["taskId", "delegations", "compliance"],
  "properties": {
    "taskId": {"type": "string"},
    "delegations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["filePattern", "model", "role"],
        "properties": {
          "filePattern": {"type": "string"},
          "model": {"type": "string"},
          "role": {"type": "string"},
          "rationale": {"type": "string"},
          "continuationId": {"type": "string"},
          "outcome": {"type": "string"}
        }
      }
    },
    "compliance": {"type": "boolean"},
    "notes": {"type": "string"},
    "suggestedFollowups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"},
          "type": {"type": "string"},
          "severity": {"type": "string", "enum": ["low","medium","high","critical"]},
          "blocking": {"type": "boolean", "default": false},
          "claimNow": {"type": "boolean", "default": false},
          "parentId": {"type": "string"},
          "files": {"type": "array", "items": {"type": "string"}},
          "suggestedSlug": {"type": "string"},
          "suggestedWave": {"type": "string"}
        }
      },
      "default": []
    }
  }
}
