{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.edison/core/orchestrator-manifest.schema.json",
  "title": "Edison Orchestrator Manifest",
  "description": "Machine-readable view of orchestrator configuration for client integrations.",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "generated": { "type": "string" },
    "composition": {
      "type": "object",
      "additionalProperties": false
    },
    "validators": {
      "type": "object",
      "additionalProperties": false
    },
    "agents": {
      "type": "object",
      "additionalProperties": false
    },
    "guidelines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": { "type": "string" },
          "purpose": { "type": "string" },
          "pack": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "workflowLoop": {
      "type": "object",
      "additionalProperties": false
    },
    "delegation": {
      "type": "object",
      "description": "Delegation configuration exposed for orchestrator clients.",
      "properties": {
        "priority": {
          "type": "object",
          "properties": {
            "implementers": {
              "type": "array",
              "items": { "type": "string" }
            },
            "validators": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        },
        "roleMapping": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "filePatternRules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": { "type": "string" },
              "preferredModel": { "type": "string" },
              "preferredModels": {
                "type": "array",
                "items": { "type": "string" }
              },
              "subAgentType": { "type": "string" },
              "delegation": { "type": "string" },
              "preferredZenRole": { "type": "string" },
              "reason": { "type": "string" },
              "description": { "type": "string" }
            },
            "required": ["pattern"],
            "additionalProperties": false
          }
        },
        "taskTypeRules": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "preferredModel": { "type": "string" },
              "preferredModels": {
                "type": "array",
                "items": { "type": "string" }
              },
              "subAgentType": { "type": "string" },
              "delegation": { "type": "string" },
              "preferredZenRole": { "type": "string" },
              "description": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "subAgentDefaults": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "defaultModel": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["version", "generated", "delegation"],
  "additionalProperties": false
}

