{
  "mcpServers": {
    "context7": {
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "command": "npx",
      "env": {}
    },
    "edison-pal": {
      "args": [],
      "command": "./scripts/pal/run-server.sh",
      "env": {
        "CLI_CLIENTS_CONFIG_PATH": ".pal/conf/cli_clients",
        "CUSTOM_API_URL": "http://127.0.0.1:11434/v1",
        "DISABLED_TOOLS": "chat,thinkdeep,planner,consensus,codereview,precommit,debug,secaudit,docgen,analyze,refactor,tracer,testgen,challenge,apilookup",
        "PAL_WORKING_DIR": "."
      }
    },
    "sequential-thinking": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "command": "npx",
      "env": {}
    }
  }
}
