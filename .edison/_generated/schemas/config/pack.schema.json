{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.edison/core/pack.schema.json",
  "title": "Edison Pack Manifest (v2)",
  "description": "Schema for .edison/packs/<name>/pack.yml",
  "type": "object",
  "required": [
    "name",
    "version",
    "description",
    "triggers"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Pack name (kebab-case)"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?$",
      "description": "SemVer version"
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "triggers": {
      "type": "object",
      "description": "Pack activation triggers grouped by concern.",
      "properties": {
        "filePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "required": [
        "filePatterns"
      ],
      "additionalProperties": false,
      "default": {
        "filePatterns": []
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*$"
      },
      "uniqueItems": true,
      "default": []
    },
    "validators": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "guidelines": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Agent overlay files for this pack (relative to agents/ directory)",
      "default": []
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "provides": {
      "type": "object",
      "description": "Optional descriptive metadata about what the pack provides.",
      "properties": {
        "validators": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "guidelines": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "scripts": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    },
    "depends": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*$"
      },
      "uniqueItems": true,
      "default": []
    },
    "compatible": {
      "type": "object",
      "description": "Optional compatibility metadata (framework/library versions).",
      "additionalProperties": false
    }
  }
}