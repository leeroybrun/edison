{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://edison.ai/schemas/state-machine-rich.schema.json",
  "title": "Edison Rich State Machine",
  "type": "object",
  "properties": {
    "statemachine": {
      "type": "object",
      "description": "Declarative state machines for task, qa, session domains.",
      "patternProperties": {
        "^[A-Za-z0-9_-]+$": {
          "type": "object",
          "properties": {
            "states": {
              "type": "object",
              "patternProperties": {
                "^[A-Za-z0-9_-]+$": {
                  "type": "object",
                  "properties": {
                    "description": {
                      "type": "string"
                    },
                    "initial": {
                      "type": "boolean"
                    },
                    "final": {
                      "type": "boolean"
                    },
                    "allowed_transitions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "to": {
                            "type": "string"
                          },
                          "guard": {
                            "type": "string"
                          },
                          "conditions": {
                            "type": "array",
                            "items": {
                              "$ref": "#/definitions/condition"
                            }
                          },
                          "actions": {
                            "type": "array",
                            "items": {
                              "$ref": "#/definitions/action"
                            }
                          }
                        },
                        "required": [
                          "to"
                        ],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": [
                    "allowed_transitions"
                  ],
                  "additionalProperties": true
                }
              },
              "additionalProperties": false
            }
          },
          "required": [
            "states"
          ],
          "additionalProperties": true
        }
      }
    }
  },
  "required": [
    "statemachine"
  ],
  "additionalProperties": false,
  "definitions": {
    "condition": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "error": {
          "type": "string"
        },
        "or": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/condition"
          }
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "action": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "when": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "string"
            }
          ]
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    }
  }
}