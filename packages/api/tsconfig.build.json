{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": false,
    "skipLibCheck": true,
    "paths": {
      "@edison/shared": ["../shared/dist/index.d.ts"],
      "@edison/shared/*": ["../shared/dist/*"]
    }
  },
  "include": ["src/**/*"]
}
