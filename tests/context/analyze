#!/usr/bin/env python3
"""CLI wrapper for context impact analyzer.

Usage:
    ./analyze                          # Run full analysis
    ./analyze --scenario baseline      # Only baseline profiling
    ./analyze --scenario bloat         # Only bloat detection
    ./analyze --output report.md       # Custom output path
    ./analyze --format json            # JSON output
    ./analyze --ci-mode --threshold 80000  # CI budget check
"""
import sys
from pathlib import Path

# Add parent directory to path for imports
script_dir = Path(__file__).resolve().parent
sys.path.insert(0, str(script_dir))

# Now import with absolute imports
import baseline_profiler
import bloat_detector
import scenario_simulator
import token_counter
import context_impact_analyzer

if __name__ == "__main__":
    context_impact_analyzer.main()
